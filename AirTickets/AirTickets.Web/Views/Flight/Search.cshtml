<div class="panel">
    @using (Ajax.BeginForm("FilterFlights", new { }, new AjaxOptions()
    {
        HttpMethod = "Post",
        UpdateTargetId = "flightPanel",
        InsertionMode = InsertionMode.Replace,
    }, new { id = "ajaxForm" }))
    {
        <input type="text" name="searchTerm" />
        <button type="submit" class="btn btn-warning">Search</button>
    }
</div>


@*<div id="flightPanel" class="panel">
    @Html.Action("AllFlights")
</div>*@


@section scripts {
    <script>
        $(function () {
            $('[name="searchTerm"]').click()(function () {
                $('#ajaxForm').submit()
            })
        })
    </script>
}